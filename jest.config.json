{
  "roots": [
    "<rootDir>/src"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
